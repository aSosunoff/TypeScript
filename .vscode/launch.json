{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Init",
            "url": "${workspaceFolder}/1_init/index.html",
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Common",
            "url": "${workspaceFolder}/2_common/index.html",
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch HeadFiles",
            "url": "${workspaceFolder}/3_head_files/index.html",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program HeadFiles",
            "program": "${workspaceFolder}/3_head_files/src/app.ts",
            "outFiles": [
                "${workspaceFolder}/3_head_files/dist/*.js"
            ],
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Decorators",
            "url": "${workspaceFolder}/4_decorators/index.html"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Module",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/5_module/",
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Namespace",
            "url": "${workspaceFolder}/6_namespace/index.html",
        }
    ]
}